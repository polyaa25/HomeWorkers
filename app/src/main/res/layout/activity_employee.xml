<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Employee">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageButton
            android:id="@+id/stopButton2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/crest" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="140dp"
            android:layout_height="131dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            app:srcCompat="@drawable/ellipsephoto" />

        <TextView
            android:id="@+id/employee_text1"
            android:layout_width="185dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@string/employee_1"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="91dp"
            android:layout_height="22dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="31dp"
                android:layout_height="match_parent"
                android:contentDescription="заполненная звезда"
                android:src="@drawable/star_filled" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="@string/employee_star_1"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="заполненная звезда"
                android:src="@drawable/star_outlined" />
        </LinearLayout>

        <TextView
            android:id="@+id/employee_text2"
            android:layout_width="180dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="@string/employee_2"
            android:textColor="@color/darkgrey"
            android:textSize="15dp"
            android:textStyle="normal" />
        <Button
            android:id="@+id/employee_button"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/gradient"
            android:text="@string/employee_3"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="normal"
            android:drawableStart="@drawable/ic_telephone"
            android:paddingStart="40dp"
            android:drawablePadding="-45dp"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>