<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoiceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/stopButton3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/crest" />

        <ImageView
            android:id="@+id/imagechoice1"
            android:layout_width="186dp"
            android:layout_height="145dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ellipse1" />

        <ImageView
            android:id="@+id/imagechoice2"
            android:layout_width="125dp"
            android:layout_height="101dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/ellipse_2_2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/choice_1"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_marginBottom="40dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/choice_Button"
            android:layout_width="57dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="25dp"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/circled_right" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagechoice3"
                android:layout_width="168dp"
                android:layout_height="152dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="50dp"
                app:srcCompat="@drawable/ellipse_2_3" />

            <ImageView
                android:id="@+id/imagechoice4"
                android:layout_width="103dp"
                android:layout_height="90dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="130dp"
                app:srcCompat="@drawable/ellipse1" />

        </LinearLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>