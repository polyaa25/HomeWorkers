<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account">

    <ImageButton
        android:id="@+id/bakeButton2"
        android:layout_width="34dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="130dp"

        android:layout_height="130dp"
        android:layout_marginTop="120dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/avatar_accaunt"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/maleuser" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="253dp"
        android:layout_height="429dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <TextView
            android:id="@+id/account_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_in_famname"
            android:textColor="@color/darkgrey"
            android:textSize="14dp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/account_first_name"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="@string/account_name1"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/account_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_in_fam"
            android:textColor="@color/darkgrey"
            android:textSize="14dp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/account_last_name"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:text="@string/account_name2"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/account_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_nomer"
            android:textColor="@color/darkgrey"
            android:textSize="14dp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/account_phone_number"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:inputType="phone"
            android:text="@string/app_phone_name3"
            android:textSize="15dp" />


        <Button
            android:id="@+id/account_zareg"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/gradient2"
            android:text="@string/account_sohr"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>