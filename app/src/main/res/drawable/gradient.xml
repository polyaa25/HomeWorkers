<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Основной фон кнопки -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/violet"  />
            <corners android:radius="25dp" />
        </shape>
    </item>
    <!-- Градиентная подложка в правом углу -->
    <item android:right="70dp" android:top="0dp" android:bottom="0dp" android:left="0dp">
        <shape android:shape="rectangle">
            <!-- <size android:width="4dp" android:height="4dp" /> -->
            <gradient
                android:startColor="@color/blue"
                android:endColor="@color/violet"
                android:angle="0"/><!--прозрачный цвет-->
            <corners android:topLeftRadius="25dp" android:bottomLeftRadius="25dp" />  <!--скругление только с левой стороны-->
        </shape>
    </item>
</layer-list>